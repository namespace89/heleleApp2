h1 People #{person.name} Edit 

form(action='/users/#{person.name}/edit',method='POST')
    input(type='hidden',name='_method',value='PUT')
    p Age:
    input#age(type='number',name='age',value='#{person.age}')
    p Name:
    input#name(type='text',name='name',value='#{person.name}')
    p Sex:
    input#sex(type='boolean',name='sex',value='#{person.sex}')
    p
    button(type='submit') Update